        /* returns map of params */
        function parseParams(parameters){
            var hash       = {};
            if (!parameters) return hash;
            for(var i=0; i < parameters.length; i++) {
                if(!parameters[i])
                    continue;
                var ary      = parameters[i].split('=');
                hash[ary[0]] = ary[1];
            }

            return hash;
        }


